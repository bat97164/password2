<% title('Securely Send a Password') %>

<div class='container'>
<%= form_for @password do |f| %>

    <div class='row'>
        <div class='col'>
            <div class='mb5'>
                <%= f.text_area(:payload, { class: "form-control",
                                            rows: 8,
                                            placeholder: I18n.t('payload_initial_text'),
                                            autocomplete: "off",
                                            autofocus: true,
                                            required: true }) %>
                <div class='mb3 position-relative'>
                    <div id="the-count" class="position-absolute bottom-0 end-0 m-2 px-3 opacity-75">
                        <span id="current">0</span>
                        <span id="maximum">/ 1048576 <%= I18n.t('passwords.new.characters') %></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class='row'>
        <div class='col-12 col-sm-8 p-3 mt-4'>
            <% if user_signed_in? %>
                <div class='row mb-3'>
                    <div class='col'>
                        <%= f.text_area(:note, { class: "form-control",
                                                 rows: 2,
                                                 placeholder: NOTE_INITIAL_TEXT,
                                                 autocomplete: "off" }) %>
                    </div>
                </div>
            <% end %>
            <div class='row'>
                <p><%= I18n.t('passwords.new.expire_after') %></p>
                <div class='col-8'>
                    <%= range_field_tag("password_expire_after_days", EXPIRE_AFTER_DAYS_DEFAULT,
                                        { :name => "password[expire_after_days]",
                                          :class => "form-range",
                                          :min => EXPIRE_AFTER_DAYS_MIN,
                                          :max => EXPIRE_AFTER_DAYS_MAX,
                                          :x_default => EXPIRE_AFTER_DAYS_DEFAULT,
                                          :step => "1" })%>
                </div>
                <div class='col-4'>
                    <label for='password_expire_after_days', id='daysrange'><%=EXPIRE_AFTER_DAYS_DEFAULT%> <%= I18n.t('passwords.new.days') %></span>
                </div>
            </div>

            <div class='row'>
                <div class='col-8'>
                    <%=range_field_tag("password_expire_after_views", EXPIRE_AFTER_VIEWS_DEFAULT,
                                       { :name => "password[expire_after_views]",
                                         :class => "form-range",
                                         :min => EXPIRE_AFTER_VIEWS_MIN,
                                         :max => EXPIRE_AFTER_VIEWS_MAX,
                                         :x_default => EXPIRE_AFTER_VIEWS_DEFAULT,
                                         :step => "1" })%>
                </div>

                <div class='col-4'>
                    <label for='password_expire_after_views', id='viewsrange'><%=EXPIRE_AFTER_VIEWS_DEFAULT%> <%= I18n.t('passwords.new.views') %></span>
                </div>
            </div>
            <div class='row'>
                <div class='col'>
                    <div class='mb3'>
                        <p class='text-center fw-lighter'><%= I18n.t('passwords.new.whichever') %></p>
                    </div>
                </div>
            </div>

            <div class='row'>
                <div class='col'>
                    <div class="list-group mx-0">
                        <% if RETRIEVAL_STEP_ENABLED %>
                            <label class="list-group-item d-flex gap-2">
                            <%=check_box_tag "password[retrieval_step]", nil, RETRIEVAL_STEP_DEFAULT,
                                            { class: 'form-check-input flex-shrink-0',
                                            x_default: RETRIEVAL_STEP_DEFAULT } %>
                            <span>
                                <%= I18n.t('passwords.new.retrieval_step') %>
                                <small class="d-block text-muted"><%= I18n.t('passwords.new.retrieval_step_note') %></small>
                            </span>
                            </label>
                        <% end %>
                        <% if DELETABLE_PASSWORDS_ENABLED %>
                            <label class="list-group-item d-flex gap-2">
                            <%= check_box_tag "password[deletable_by_viewer]", nil, DELETABLE_PASSWORDS_DEFAULT,
                                            { class: 'form-check-input flex-shrink-0',
                                                x_default: DELETABLE_PASSWORDS_DEFAULT }  %>
                            <span>
                                <%= I18n.t('passwords.new.allow_deletion') %>
                                <small class="d-block text-muted"><%= I18n.t('passwords.new.allow_deletion_note') %></small>
                            </span>
                            </label>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class='col-12 col-sm-4 p-3 mt-4'>
            <div class="mb-3 text-end">
                <div class="btn-group w-100" role="group" aria-label="Button group with nested dropdown">
                    <button class="btn btn-primary active w-75" type="button" id='generate_password'><em class="bi bi-cpu"></em> <%= I18n.t('passwords.new.generate_password') %></button>
                    <button class="btn btn-primary" type="button" id='configure_generator' data-bs-toggle="modal" data-bs-target="#configureModal">
                        <em class="bi bi-gear"></em>
                    </button>
                </div>
            </div>
            <p class='fst-italic'><%= I18n.t('passwords.new.tip') %></p>
            <p class='fst-italic fw-light'><%= I18n.t('passwords.new.info') %></p>
        </div>
    </div>
    <div class='row'>
        <div class='col'>
            <p class='mb-3'>
                <div id='cookie-save'>
                    <a href='#' id='save-defaults'><%= I18n.t('passwords.new.cookie_save') %></a> <%= I18n.t('passwords.new.cookie_save_2') %>
                </div>
            </p>
        </div>
    </div>
    <div class='row'>
        <div class='col'>
            <p class='my-3'>
                <%=f.submit(:value => "#{I18n.t('passwords.new.push_it')}", :class => "form-control btn btn-primary", type: 'submit', 'data-disable-with' => "Pushing...")%>
            </p>
        </div>
    </div>
<% end %>

<%= render partial: 'shared/pw_generator_modal' %>

</div>